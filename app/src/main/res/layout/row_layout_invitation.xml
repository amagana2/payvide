<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/primary"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/bpTransparent"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/joinButton"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:text="@string/join_button_text"/>

            <Button
                android:id="@+id/rejectButton"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                android:text="@string/reject_button_text"/>

            <TextView
                android:id="@+id/admin_username_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/admin_name_invite"
                android:layout_centerHorizontal="true"
                android:text="username"/>

            <TextView
                android:id="@+id/admin_name_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Display name"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/group_name_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="Group Name"
                android:textSize="26sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>